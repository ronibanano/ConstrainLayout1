<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview_moviePoster"
        android:layout_width="480dp"
        android:layout_height="269dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textview_movieName"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="AVATAR"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster" />

    <TextView
        android:id="@+id/textview_movieTagline"
        android:layout_width="235dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="317dp"
        android:text="Avatar is a 2009 epic science fiction film directed, written, co-produced, and co-edited by James Cameron"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_movieName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_moviePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster"
        app:srcCompat="@drawable/img_1" />

    <ImageView
        android:id="@+id/imageView_status1"
        android:layout_width="80dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/img_4"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView_status1"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="share"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_status1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status1" />

    <ImageView
        android:id="@+id/imageView_status2"
        android:layout_width="81dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/img_3"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView_status2"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:text="download"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status2"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/imageView_status2"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status2" />

    <ImageView
        android:id="@+id/imageView_status3"
        android:layout_width="87dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/img_2"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView_status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="565dp" />
</androidx.constraintlayout.widget.ConstraintLayout>